.Home
  transition: all .4s

.Home > .Cell
    height: 100vh

.Left-pane
  background-image: url('../img/alexrdz.jpg')
  background-attachment: fixed
  background-position: left center
  background-repeat: no-repeat
  // background-size: cover
  
  &__image
    background-image: linear-gradient(180deg, #2af598 0%, #009efd 100%)
    position: fixed
    left: 0
    right: 0
    top: 0
    bottom: 0
    opacity: .6
    +above($medium)
      width: 50%

  &__content
    color: #fff
    +above($medium)
      padding: 6em
    position: relative
    top: 75%
    transform: translateY(-75%)
    z-index: 5

.Right-pane
  background-color: $light
  +above($medium)
    padding: 2em 6em
  position: relative
  z-index: 6
  &__content
    position: relative

.Brand
  display: block
  height: auto
  margin: 0 auto 10vh
  position: relative
  width: 65px
.underscore
  background-color: rgba(black, 0.2)
  height: 1px
  margin: 10px auto 30px
  width: 5%
