.Navigation
  flex-direction: row
  a
    &:after
      background-image: linear-gradient(180deg, #2af598 0%, #009efd 100%)
      content: ''
      display: block
      height: 2px
      margin: 0 auto
      transition: all .3s ease-in-out
      width: 0
    &:hover
      color: #4C5760
      &:after
        width: 30px

  
  